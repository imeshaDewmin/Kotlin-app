<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodlistActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_menu_24"
            android:text="Cafe  Da  Vibe"
            android:textAlignment="center"
            android:textColor="#6B3DA6"
            android:textSize="30dp"
            android:textStyle="bold" />

        <SearchView
            android:id="@+id/search_box"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="#F2EEEE"
            android:iconifiedByDefault="false"
            android:queryHint="Search Food..."/>

        <RelativeLayout
            android:id="@+id/Relay1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/search_box"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="#9B86AC"
            android:padding="15dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_marginRight="25dp"
                android:background="#9B86AC"
                android:src="@drawable/pizza" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/imageView1"
                android:text="Pizza"
                android:textColor="#0A0A0A"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/see1"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#C1C1C1"
                android:text="See more..."
                android:textColor="#000000"
                android:textSize="8dp"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/Relay2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/Relay1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="#9B86AC"
            android:padding="15dp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="245dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_marginRight="25dp"
                android:background="#9B86AC"
                android:src="@drawable/burger" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/imageView2"
                android:text="Burgers"
                android:textColor="#0A0A0A"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/see2"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:adjustViewBounds="true"
                android:backgroundTint="#C1C1C1"
                android:text="See more..."
                android:textColor="#000000"
                android:textSize="8dp"
                android:textStyle="bold" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/Relay2"
        android:id="@+id/Relay3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#9B86AC"
        android:padding="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="245dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginRight="25dp"
            android:background="#9B86AC"
            android:src="@drawable/shorteats" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/imageView3"
            android:text="Short eats"
            android:textColor="#0A0A0A"
            android:textSize="17dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/see3"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#C1C1C1"
            android:text="See more..."
            android:textColor="#000000"
            android:textSize="8dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/Relay3"
        android:id="@+id/Relay4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#9B86AC"
        android:padding="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="245dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginRight="25dp"
            android:background="#9B86AC"
            android:src="@drawable/beverages" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/imageView4"
            android:text="Beverages"
            android:textColor="#0A0A0A"
            android:textSize="17dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/see4"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#C1C1C1"
            android:text="See more..."
            android:textColor="#000000"
            android:textSize="8dp"
            android:textStyle="bold" />
    </RelativeLayout>

    </RelativeLayout>


</ScrollView>




